/* USER CODE BEGIN 0 */
/* üü¢ Configure CAN Filter */
void CAN_ConfigFilter(void) {
    CAN_FilterTypeDef FilterConfig;

    FilterConfig.FilterBank = 0;
    FilterConfig.FilterMode = CAN_FILTERMODE_IDMASK;
    FilterConfig.FilterScale = CAN_FILTERSCALE_32BIT;
    FilterConfig.FilterIdHigh = 0x0000;
    FilterConfig.FilterIdLow = 0x0000;
    FilterConfig.FilterMaskIdHigh = 0x0000;
    FilterConfig.FilterMaskIdLow = 0x0000;
    FilterConfig.FilterFIFOAssignment = CAN_RX_FIFO0;
    FilterConfig.FilterActivation = ENABLE;

    if (HAL_CAN_ConfigFilter(&hcan, &FilterConfig) != HAL_OK) {
        printf("CAN Filter Config Failed!\n");
        Error_Handler();
    }
}
/* üü¢ Start CAN */
void CAN_Start(void) {
    if (HAL_CAN_Start(&hcan) != HAL_OK) {
        printf("CAN Start Failed!\n");
        Error_Handler();
    }

    HAL_CAN_ActivateNotification(&hcan, CAN_IT_RX_FIFO0_MSG_PENDING);
    printf("CAN Started Successfully\n");
}

/* üü¢ Transmit CAN Message */
void CAN_Transmit(void) {
    TxHeader.StdId = 0x123;
    TxHeader.ExtId = 0;
    TxHeader.RTR = CAN_RTR_DATA;
    TxHeader.IDE = CAN_ID_STD;
    TxHeader.DLC = 8;
    TxHeader.TransmitGlobalTime = DISABLE;

    if (HAL_CAN_AddTxMessage(&hcan, &TxHeader, TxData, &TxMailbox) != HAL_OK) {
        printf("CAN Transmission Failed!\n\r");
        Error_Handler();
    } else {
        printf("CAN Message Sent: ");
        for (int i = 0; i < 8; i++) {
            printf("%02X ", TxData[i]);
        }
        printf("\n\r");
    }
}

/* üü¢ Receive CAN Message & Print */
void CAN_Receive(void) {
    if (HAL_CAN_GetRxMessage(&hcan, CAN_RX_FIFO0, &RxHeader, RxData) == HAL_OK) {
        printf("CAN Message Received - ID: 0x%03X, Data: ", RxHeader.StdId);
        for (int i = 0; i < RxHeader.DLC; i++) {
            printf("%02X ", RxData[i]);
        }
        printf("\n\r");
    } else {

        printf("CAN Reception Failed!\n\r");
        uint32_t error = HAL_CAN_GetError(&hcan);
        printf("CAN Error: 0x%08lX\n", error);
        Error_Handler();
    }
}

/* üü¢ Interrupt Handler for Receiving CAN Messages */
void HAL_CAN_RxFifo0MsgPendingCallback(CAN_HandleTypeDef *hcan) {
    CAN_RxHeaderTypeDef RxHeader;
    uint8_t RxData[8];

    // Receive CAN message
    if (HAL_CAN_GetRxMessage(hcan, CAN_RX_FIFO0, &RxHeader, RxData) == HAL_OK) {
        printf("‚úÖ CAN Msg Received - ID: 0x%03X, Data: ", RxHeader.StdId);
        for (int i = 0; i < RxHeader.DLC; i++) {
            printf("%02X ", RxData[i]);
        }
        printf("\n");
    } else {
        printf("‚ùå Error Receiving CAN Message!\n");
    }
}
void CAN_EnableInterrupts(void) {
    if (HAL_CAN_ActivateNotification(&hcan, CAN_IT_RX_FIFO0_MSG_PENDING) != HAL_OK) {
        printf("‚ùå Failed to Enable CAN Interrupts!\n");
    }
}
void CAN_PollingReceive(void) {
    CAN_RxHeaderTypeDef RxHeader;
    uint8_t RxData[8];

    // Check if a message is available
    if (HAL_CAN_GetRxFifoFillLevel(&hcan, CAN_RX_FIFO0) > 0) {
        if (HAL_CAN_GetRxMessage(&hcan, CAN_RX_FIFO0, &RxHeader, RxData) == HAL_OK) {
            printf("‚úÖ Received CAN ID: 0x%03X, Data: ", RxHeader.StdId);
            for (int i = 0; i < RxHeader.DLC; i++) {
                printf("%02X ", RxData[i]);
            }
            printf("\n");
        } else {
            printf("‚ùå CAN Read Failed!\n");
        }
    }
}
void CAN_SendMessage() {
	uint8_t data[8] = {0x11, 0x22, 0x33, 0x44, 0x55, 0x66, 0x77, 0x88};
    // Check if a mailbox is available
    if (HAL_CAN_GetTxMailboxesFreeLevel(&hcan1) > 0) {
        if (HAL_CAN_AddTxMessage(&hcan1, &TxHeader, data, &TxMailbox) != HAL_OK) {
            printf("‚ùå CAN TX Failed!\n");
        } else {
            printf("üöÄ CAN Message Sent! ID: 0x%03X\n", TxHeader.StdId);
        }
    } else {
        printf("‚ö†Ô∏è No Free Mailbox, TX Buffer Full!\n");
    }
}
/* üü¢ Redirect printf to UART (for debugging) */
int _write(int file, char *ptr, int len) {
    HAL_UART_Transmit(&huart1, (uint8_t*) ptr, len, HAL_MAX_DELAY);
    return len;
}
